from random import randint

#create a list of play options
t= ["Rock", "Paper", "Scissors"]

#assign a random play to the computer
computer = t[randint(0,2)]

#set player to false
player =False

While Player == False
#set player to true 
    Player = input("Rock", "Paper", "Scissors")
    if player == computer
        print("you have tied")
